<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(download) -%>">
  <span class='title'>
    <%= download.title %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), download_url(download),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_download_path(download),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_download_path(download),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => download.title),
        :method => :delete %>
  </span>
</li>
